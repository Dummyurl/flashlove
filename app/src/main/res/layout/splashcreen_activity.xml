<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:id="@+id/parent"
    android:orientation="vertical">
        <ImageView
            android:id="@+id/background"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="10dp"
            android:padding="18dp"
            android:id="@+id/logo"
            android:adjustViewBounds="true"
            android:src="@drawable/logoq"
            android:layout_width="250dp"
            android:scaleType="fitCenter"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="20dp"
                android:text="IT'S QUICK &amp; EASY TO"
                android:id="@+id/cont"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="20dp"
                android:text="Meet New People Online"
                android:textSize="22sp"
                android:textStyle="bold"
                android:id="@+id/amg"
                android:textColor="@color/red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:text="Flashlov is great for chatting,making friends,sharing interest and even dating! Did we mention it's free?"
                android:id="@+id/ang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>




    </LinearLayout>





</RelativeLayout>